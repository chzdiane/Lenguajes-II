<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo"
        tools:context=".Sentencias">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HABITAD HORIZONTAL"
            android:textSize="35dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"></TextView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTotalUnidades"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="TOTAL UNIDADES DE LA EMPRESA"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnArrendadas"
            android:textColor="#000000"
            android:text="TOTAL UNIDADES ARRENDADAS"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDisponibles"
            android:textColor="#000000"
            android:text="TOTAL UNIDADES DISPONIBLES"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMejorCliente"
            android:text="MEJOR CLIENTE"
            android:textColor="#000000"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnPromedio"
            android:textColor="#000000"
            android:text="PROMEDIO DE ARRIENDOS"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnUnidadMasComun"
            android:textColor="#000000"
            android:text="VIVIENDA MAS COMUN"
            android:textStyle="bold"></Button>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtFechaConsulta"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:hint="Ingrese la fecha 00/00/00"></EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDiaEspecifico"
            android:textColor="#000000"
            android:text="UNIDADES ARRENDADAS EN EL DIA"
            android:textStyle="bold"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lbResultados"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text=" "
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20dp"></TextView>

    </LinearLayout>
</ScrollView>