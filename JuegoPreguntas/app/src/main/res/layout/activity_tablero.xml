            android:background="@drawable/ic_flor"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta10"
            android:layout_below="@+id/btnPregunta5"
            android:layout_toRightOf="@+id/btnPregunta9"
