<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_login"
        android:orientation="vertical"
        tools:context=".tablero">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APRENDO JUGANDO"
            android:fontFamily="sans-serif-black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:id="@+id/lbNombreJuego"
            android:textAlignment="center"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lbNombreJugador"
            android:layout_below="@id/lbNombreJuego"
            android:text="Nombre Jugador"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="10dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lbPuntaje"
            android:text="puntaje"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/lbNombreJugador"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta1"
            android:background="@drawable/ic_carafeliz"
            android:backgroundTint="#FFFFFF"
            android:layout_below="@+id/lbPuntaje"
            android:layout_marginTop="20dp"
            android:textSize="20dp"></Button>


