            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta8"
            android:layout_below="@+id/btnPregunta3"
            android:layout_toRightOf="@+id/btnPregunta7"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_corazon"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta9"
            android:layout_below="@+id/btnPregunta4"
            android:layout_toRightOf="@+id/btnPregunta8"
