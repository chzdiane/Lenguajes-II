            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta11"
            android:layout_below="@+id/btnPregunta6"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_avion"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta12"
            android:layout_toRightOf="@+id/btnPregunta11"
            android:layout_below="@+id/btnPregunta7"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_star"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta13"
            android:layout_toRightOf="@+id/btnPregunta12"
            android:layout_below="@+id/btnPregunta8"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_mundo"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta14"
            android:layout_toRightOf="@+id/btnPregunta13"
            android:layout_below="@+id/btnPregunta9"
