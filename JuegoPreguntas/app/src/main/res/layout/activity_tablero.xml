            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta15"
            android:layout_toRightOf="@+id/btnPregunta14"
            android:layout_below="@+id/btnPregunta10"
            android:layout_marginTop="8dp"
