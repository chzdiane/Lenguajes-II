            android:layout_height="70dp"
            android:id="@+id/btnPregunta2"
            android:layout_below="@+id/lbPuntaje"
            android:background="@drawable/ic_luna"
            android:layout_toRightOf="@+id/btnPregunta1"
            android:layout_marginTop="20dp"
            android:textSize="20dp"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta3"
            android:layout_toRightOf="@+id/btnPregunta2"
            android:layout_below="@+id/lbPuntaje"
            android:background="@drawable/ic_sol"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta4"
            android:layout_toRightOf="@+id/btnPregunta3"
            android:layout_below="@+id/lbPuntaje"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_cake"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta5"
            android:layout_toRightOf="@+id/btnPregunta4"
            android:layout_below="@+id/lbPuntaje"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_palet"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta6"
            android:layout_below="@+id/btnPregunta1"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_pencil"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPregunta7"
            android:layout_below="@+id/btnPregunta2"
            android:layout_toRightOf="@+id/btnPregunta6"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_pieza"
